page {
  background: #f6f6f6;
  height: 100%;
  width: 100%;
}

.textBoxALL{
  background-color:#fff;
  height:100%;
  border: 1rpx solid #000;

}

.textBox {
  position: absolute;
  top:0;
  background-color: #f6f6f6;
  height: 35px;
  width: 90%;
  padding: 5%;
  padding-bottom: 0;
  z-index: 100;
    box-shadow: 0rpx 15rpx 20rpx 0rpx #f6f6f6;
}

.textImage {
  position: absolute;
  height: 100%;
  width: 30px;
  right: 0;
  z-index: 200;
}

.textInput {
  background-color: #fff;
  height: 100%;
  width: 97%;
  display: flex;
  flex-direction: column;
  font-size: 15px;
  margin-left: 3%;
}

.searchBox {
  height: 90%;
  width: 100%;
  margin-top: 16%;
  background-color: none;
}

.searchItem {
  vertical-align: middle;
  height: 40px;
  width: 100%;
  background-color: #fff;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  align-items: center;
}

.searchItemBefore{
  height: 35rpx;
  width: 35rpx;
  margin-left: 5px;
}

.searchItemAfter{
  height: 50rpx;
  width: 50rpx;
  position: absolute;
  right: 5px;
}

