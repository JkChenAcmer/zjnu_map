text {
  font-size: 20px;
  margin-left: 3%;
  color: rgba(5, 36, 75, 0.932);
}

.weui-search-bar__box {
  width: 80%;
  margin-left: 10%;
}

.list-msg {
  width: 15%;
  height: 30px;
  display: inline-flex;
  white-space: nowrap;
  flex-direction: column;
  box-sizing: border-box;
}

.cons {
  height: 30px;
  width: 100%;
  display: flex;
  white-space: nowrap;
}

.choice-bar {
  position: fixed;
  display: flex;
  width: 100%;
  font-size: 14px;
}

.chioce-item {
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  width: 15%;
  height: 29px;
  border: 1rpx solid #000;
}

.chioce-item image{
height: 30rpx;
  width: 30rpx;
}

.district-list, .sorting-list, .filter-list {
  margin-top: 2rpx;
  position: absolute;
  top: 80rpx;
  left: 0;
  width: 30%;
  background-color: #fff;
  z-index: -1;
  font-size: 14px;
  border-bottom: 1rpx solid #ddd;
}

.chioce-list-hide {
  display: none !important;
}

.chioce-list-show {
  animation: slide 500ms;
}

.sorting-item {
  height: 30px;
  line-height: 30px;
  padding: 0 40rpx;
  border-bottom: 1rpx solid #ddd;
}

